@model IEnumerable<Planilhas.Models.Role>

@{
    ViewBag.Title = "Listagem de grupos";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <style>
        .cor-conteudo{
            color:black;
                }
        .td:hover{
            color:#428bcd;
            
        }

        .spacerBody{
            min-height:410px;
        }
    </style>
}

<div class="cor-conteudo">
    <div class="spacerBody" style="padding:30px; width:45%;">
        @Html.ActionLink("Criar novo grupo", "RoleCreate") | @Html.ActionLink("Adicionar usuário a um grupo", "RoleAddToUser")
        
        <h2>Grupos</h2>
        <div class="table" style="margin-top:20px;">

         
            @foreach (var item in Model)
            {
                <div class="tr">
                    
                    <div class="td" style="height:28px;">

                        <span style="font-size:15px; font-family:'Montserratf' sans-serif;">@item.RoleName</span>
                      
                       
                            <span onclick="return confirm('Tem certeza que deseja excluir?')">

                                
                                <a href="/Account/RoleDelete?RoleName=@item.RoleName" class="delLink" title="Excluir"><i class="glyphicon glyphicon-trash"  style="float:right;"></i></a>

                            </span>
                   
                    </div>
                </div>
            }
        </div>
    </div>
</div>