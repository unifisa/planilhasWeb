@model Planilhas.Models.UserAccount

@{
    ViewBag.Title = "Alterar a Senha";
}

<head>
    <link href="@Url.Content("/Content/Site.css")" rel="stylesheet" type="text/css" />

</head>

@using (Html.BeginForm("AlterarSenha", "Senha", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (Request.IsAuthenticated && ViewBag.title != "Login")
    {

    @Html.AntiForgeryToken()

    <div class="cor-conteudo">
        <h3>@ViewBag.Title</h3>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Senha, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Coloque uma senha nova" } })
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmeSenha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmeSenha, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirme sua senha" } })
                @Html.ValidationMessageFor(model => model.ConfirmeSenha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="col-lg-2">

            </div>
            <div class="col-md-8">
                <input type="submit" value="Alterar a senha" class="btn btn-default" />
            </div>

        </div>
        <div class="form-group">
            <div class="col-lg-12">
               
                    <div class="col-lg-6"></div>
                    <div class="form-group col-lg-6">
                        @if (TempData["Message"] != null)
                        {
                            <div class="form-group">
                                <div class="mensagem-sucesso" style="color:forestgreen;">@TempData["Message"]</div>
                            </div>
                        }
                       @if (TempData["Msg"] != null)

                       {
                        <div class="form-group">
                            
                            <div class="mensagem-erro" style="color:darkred;">@TempData["Msg"]</div>
                        </div>
                       }
                       
                    </div>
                
            </div>
        </div>
    </div>

    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}